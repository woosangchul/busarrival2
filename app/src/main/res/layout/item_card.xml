<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textviewBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/mornigsalad"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@id/textViewArrive"
            app:layout_constraintHeight_percent="0.05"
            app:layout_constraintStart_toStartOf="@id/textViewDepart"

            app:layout_constraintTop_toBottomOf="@id/textViewDepart" />

        <TextView
            android:id="@+id/textViewDepart"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="2캠"
            android:textSize="20dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintRight_toLeftOf="@+id/imageviewArrow" />

        <ImageView
            android:id="@+id/imageviewArrow"
            android:layout_width="24dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewArrive"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="지행"
            android:textSize="20dp"
            app:layout_constraintHeight_percent="0.2"

            app:layout_constraintStart_toEndOf="@+id/imageviewArrow" />

        <ImageView
            android:id="@+id/imageviewBus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:cropToPadding="false"

            android:scaleType="fitCenter"
            android:src="@drawable/school_bus"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinestart"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            app:layout_constraintWidth_percent="0.06" />

        <TextView
            android:id="@+id/textViewFirstBusText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"

            android:text="07:00"
            android:textSize="18dp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintLeft_toRightOf="@+id/imageviewBus"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            app:layout_constraintWidth_percent="0.42" />


        <ImageView
            android:id="@+id/imageviewBussub"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:cropToPadding="false"
            android:scaleType="fitCenter"

            android:src="@drawable/school_bus"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintLeft_toRightOf="@+id/textViewFirstBusText"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            app:layout_constraintWidth_percent="0.06" />

        <TextView
            android:id="@+id/textViewNextBusText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="08:30"
            android:textSize="18dp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintLeft_toRightOf="@+id/imageviewBussub"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            app:layout_constraintWidth_percent="0.42" />

        <ImageView
            android:id="@+id/imageviewsubway"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/metro"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintLeft_toLeftOf="@+id/guidelinestart"
            app:layout_constraintTop_toBottomOf="@+id/textViewFirstBusText"
            app:layout_constraintWidth_percent="0.06" />

        <TextView
            android:id="@+id/textViewFirstSubText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="09:00"
            android:textSize="18dp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintLeft_toRightOf="@+id/imageviewsubway"
            app:layout_constraintTop_toBottomOf="@+id/textViewFirstBusText"
            app:layout_constraintWidth_percent="0.42" />

        <ImageView
            android:id="@+id/imageviewsubwaysub"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/metro"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintLeft_toRightOf="@id/textViewFirstSubText"
            app:layout_constraintTop_toBottomOf="@+id/textViewFirstBusText"
            app:layout_constraintWidth_percent="0.06" />

        <TextView
            android:id="@+id/textViewNextSubText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="09:15"
            android:textSize="18dp"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintLeft_toRightOf="@+id/imageviewsubwaysub"
            app:layout_constraintTop_toBottomOf="@+id/textViewFirstBusText"
            app:layout_constraintWidth_percent="0.42" />

        <android.support.constraint.Guideline
            android:id="@+id/guidelinestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.02" />

        <android.support.constraint.Guideline
            android:id="@+id/guidelineend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.98" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.375" />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>