<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.busarrival.fragment.SecondFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/cardViewFirst"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintHeight_percent="0.5"
            app:cardCornerRadius="1dp"
            app:cardElevation="8dp">


            <android.support.constraint.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageviewLeftArrow"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/left_arrow"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewDepartFrag2"
                    app:layout_constraintHeight_percent="0.1"
                    app:layout_constraintStart_toStartOf="@id/guidelinestart"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.06" />

                <TextView
                    android:id="@+id/textViewDepartFrag2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="2캠퍼스"
                    android:textSize="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.19"
                    app:layout_constraintRight_toLeftOf="@+id/imageviewArrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="1" />

                <ImageView
                    android:id="@+id/imageviewRightArrow"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/right_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/guidelineend"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewDepartFrag2"
                    app:layout_constraintHeight_percent="0.1"
                    app:layout_constraintWidth_percent="0.06" />

                <TextView
                    android:id="@+id/textviewBackground"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/healthwater"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="@id/textViewArrive"
                    app:layout_constraintHeight_percent="0.01"
                    app:layout_constraintStart_toStartOf="@id/textViewDepartFrag2"
                    app:layout_constraintTop_toBottomOf="@id/textViewDepartFrag2" />


                <ImageView
                    android:id="@+id/imageviewBus"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"

                    android:src="@drawable/school_bus"
                    app:layout_constraintHeight_percent="0.12"
                    app:layout_constraintLeft_toLeftOf="@+id/guidelinestart"
                    app:layout_constraintTop_toBottomOf="@+id/textviewBackground"
                    app:layout_constraintWidth_percent="0.06" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Bus"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/textViewFirstBusTextFrag2"
                    app:layout_constraintStart_toEndOf="@+id/imageviewBus"
                    app:layout_constraintTop_toBottomOf="@+id/textviewBackground" />

                <Button
                    android:id="@+id/buttonSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="#00ffffff"
                    android:text="Schedule"
                    app:layout_constraintBottom_toTopOf="@+id/textViewFirstBusTextFrag2"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineend"
                    app:layout_constraintHeight_percent="0.12"
                    app:layout_constraintTop_toBottomOf="@+id/textviewBackground" />

                <TextView
                    android:id="@+id/textViewFirstBusTextFrag2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"

                    android:text="07:00"
                    android:textSize="24dp"
                    app:layout_constraintHeight_percent="0.28"
                    app:layout_constraintLeft_toRightOf="@+id/guidelinestart"
                    app:layout_constraintTop_toBottomOf="@+id/imageviewBus"
                    app:layout_constraintWidth_percent="0.48" />


                <TextView
                    android:id="@+id/textViewNextBusTextFrag2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="0dp"
                    android:text="08:30"
                    android:textSize="24dp"
                    app:layout_constraintHeight_percent="0.28"
                    app:layout_constraintStart_toEndOf="@+id/textViewFirstBusTextFrag2"
                    app:layout_constraintTop_toBottomOf="@+id/imageviewBus"
                    app:layout_constraintWidth_percent="0.48" />

                <ImageView
                    android:id="@+id/imageviewsubway"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/metro"
                    app:layout_constraintHeight_percent="0.12"
                    app:layout_constraintLeft_toLeftOf="@+id/guidelinestart"
                    app:layout_constraintTop_toBottomOf="@+id/textViewFirstBusTextFrag2"
                    app:layout_constraintWidth_percent="0.06" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:text="Subway"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/textViewFirstSubTextFrag2"
                    app:layout_constraintStart_toEndOf="@+id/imageviewsubway"
                    app:layout_constraintTop_toBottomOf="@+id/textViewFirstBusTextFrag2" />

                <TextView
                    android:id="@+id/textViewFirstSubTextFrag2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"
                    android:text="09:00"
                    android:textSize="24dp"
                    app:layout_constraintHeight_percent="0.28"
                    app:layout_constraintLeft_toRightOf="@+id/guidelinestart"
                    app:layout_constraintTop_toBottomOf="@+id/imageviewsubway"
                    app:layout_constraintWidth_percent="0.48" />

                <TextView
                    android:id="@+id/textViewNextSubTextFrag2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="right|center_vertical"
                    android:text="09:15"
                    android:textSize="24dp"
                    app:layout_constraintHeight_percent="0.28"
                    app:layout_constraintLeft_toRightOf="@+id/textViewFirstSubTextFrag2"
                    app:layout_constraintTop_toBottomOf="@+id/imageviewsubway"
                    app:layout_constraintWidth_percent="0.48" />

                <android.support.constraint.Guideline
                    android:id="@+id/guidelinestart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.02" />

                <android.support.constraint.Guideline
                    android:id="@+id/guidelineend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.98" />

            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardViewFirst"
            app:layout_constraintHeight_percent="0.35"
            app:cardCornerRadius="1dp"
            app:cardElevation="8dp">


            <android.support.constraint.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageviewMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cropToPadding="false"
                    android:scaleType="fitXY"
                    android:src="@drawable/shuttlemap"

                    app:layout_constraintHeight_percent="0.1"
                    app:layout_constraintStart_toStartOf="@id/guidelinestart"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.06" />




            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:background="@drawable/healthwater"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewDepartTextL1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"

                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/textViewArriveTextL1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:layout_centerInParent="true"
                    android:text="2캠퍼스"
                    android:textSize="20dp" />
                <ImageView
                    android:id="@+id/imageViewArrowImageL1"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/textViewArriveTextL1"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ticket" />




            </RelativeLayout>











</FrameLayout>