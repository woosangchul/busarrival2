<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingTop="8dp"
            android:text="Depart"
            android:textColor="#BDBDBD"
            android:textSize="12dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="@+id/textViewDepart"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingTop="8dp"
            android:text="Arrive"
            android:textColor="#BDBDBD"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewArrive"
            app:layout_constraintHeight_percent="0.1"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#50BDBDBD"
            android:text="TextView"
            app:layout_constraintHeight_percent="0.0" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/winterneva"
            app:layout_constraintEnd_toEndOf="@+id/textViewArrive"
            app:layout_constraintHeight_percent="0.02"
            app:layout_constraintStart_toStartOf="@+id/textViewDepart"
            app:layout_constraintTop_toBottomOf="@+id/textViewArrive" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNextBusText" />

        <TextView
            android:id="@+id/textViewDepart"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="2캠"
            android:textColor="#757575"
            android:textSize="24dp"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <ImageView
            android:id="@+id/imageviewArrow"
            android:layout_width="24dp"
            android:layout_height="0dp"

            android:scaleType="fitCenter"
            android:src="@drawable/next_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/textViewDepart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewDepart" />

        <TextView
            android:id="@+id/textViewArrive"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="지행"
            android:textColor="#757575"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <ImageView
            android:id="@+id/imageviewBus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/school_bus"
            app:layout_constraintBottom_toBottomOf="@+id/textViewFirstBusText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewFirstBusText"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="이전"
            android:textColor="#03A9F4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="8dp"
            android:text="다음"
            android:textColor="#03A9F4"
            app:layout_constraintBottom_toTopOf="@+id/textViewNextBusText"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textViewFirstBusText"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:gravity="left|center_vertical"
            android:paddingLeft="0dp"
            android:text="07:00"
            android:textColor="@android:color/background_dark"
            android:textSize="24dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintWidth_percent="0.4" />


        <TextView
            android:id="@+id/textViewNextBusText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="right|center_vertical"
            android:paddingLeft="0dp"
            android:text="08:30"
            android:textColor="@android:color/background_dark"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewFirstBusText"
            app:layout_constraintEnd_toEndOf="@+id/textView8"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintWidth_percent="0.4" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="이전"
            android:textColor="#03A9F4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="다음"
            android:textColor="#03A9F4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView13" />

        <ImageView
            android:id="@+id/imageViewSubway"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewFirstSubText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewFirstSubText"
            app:layout_constraintWidth_percent="0.1"
            app:srcCompat="@drawable/metro" />

        <TextView
            android:id="@+id/textViewFirstSubText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="0dp"
            android:text="09:00"
            android:textColor="@android:color/background_dark"
            android:textSize="24dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintWidth_percent="0.4" />

        <TextView
            android:id="@+id/textViewNextSubText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="right|center_vertical"
            android:paddingLeft="0dp"
            android:text="09:15"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/textView11"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintWidth_percent="0.4" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="161dp"
            app:layout_constraintGuide_percent="0.34"
            app:layout_constraintHeight_percent="0" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>